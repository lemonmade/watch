{
  "extends": "@quilted/typescript/service.json",
  "compilerOptions": {
    "outDir": "build/typescript",
    "paths": {
      "shared/*": ["../shared/*"],
      "global/*": ["../../global/*"]
    }
  },
  "include": ["**/*"],
  "exclude": [
    "sewing-kit.config.ts",
    "infrastructure",
    "build",
    "*.test.ts",
    "*.test.tsx"
  ],
  "references": [
    {"path": "../../global"},
    {"path": "../shared"},
    {"path": "../email"}
  ]
}
