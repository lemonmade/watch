{
  "extends": "@quilted/typescript/app.json",
  "compilerOptions": {
    "outDir": "build/typescript",
    "lib": ["ESNext", "DOM"],
    "paths": {
      "components": ["./components"],
      "graphql/*": ["./graphql/*"],
      "utilities/*": ["./utilities/*"],
      "global/*": ["../global/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["quilt.project.ts", "infrastructure", "build"],
  "references": [
    {
      "path": "../global"
    },
    {
      "path": "../packages/basics"
    },
    {
      "path": "../packages/clips"
    },
    {
      "path": "../packages/css"
    },
    {
      "path": "../packages/zest"
    }
  ]
}
