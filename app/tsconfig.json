{
  "extends": "@quilted/typescript/app.json",
  "compilerOptions": {
    "outDir": "build/typescript",
    "paths": {
      "components": ["./components"],
      "graphql/*": ["./graphql/*"],
      "utilities/*": ["./utilities/*"],
      "global/*": ["../global/*"]
    }
  },
  "include": ["**/*"],
  "exclude": [
    "sewing-kit.config.ts",
    "infrastructure",
    "build",
    "*.test.ts",
    "*.test.tsx"
  ],
  "references": [
    {
      "path": "../global"
    },
    {
      "path": "../packages/basics"
    },
    {
      "path": "../packages/clips"
    },
    {
      "path": "../packages/css"
    },
    {
      "path": "../packages/zest"
    }
  ]
}
