{
  "extends": "@quilted/typescript/tsconfig.project.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "jsxImportSource": "preact",
    "paths": {
      "~/graphql/*": ["./graphql/*"],
      "~/shared/*": ["./shared/*"],
      "~/global/*": ["../global/*"],
      "~/tests/*": ["./tests/*"],
      "react": ["./node_modules/preact/compat"],
      "react-dom": ["./node_modules/preact/compat"]
    }
  },
  "include": ["**/*"],
  "exclude": ["infrastructure", "build"],
  "references": [
    {"path": "../functions/email"},
    {"path": "../global"},
    {"path": "../packages/api"},
    {"path": "../packages/clips"},
    {"path": "../packages/css"},
    {"path": "../packages/thread-render"},
    {"path": "../packages/tools"},
    {"path": "../packages/zest"}
  ]
}
