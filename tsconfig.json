{
  "extends": "@quilted/typescript/workspace.json",
  "include": [
    "config/**/*.ts",
    "scripts/**/*.ts",
    "graphql.config.ts",
    "quilt.workspace.ts",
    "**/quilt.project.ts"
  ],
  "compilerOptions": {
    "outDir": "build/typescript/workspace",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "paths": {"global/*": ["./global/*"]}
  },
  "references": [
    {"path": "./app"},
    {"path": "./functions/clips-upload"},
    {"path": "./functions/email"},
    {"path": "./functions/router"},
    {"path": "./functions/shared"},
    {"path": "./functions/tmdb-refresher"},
    {"path": "./functions/tmdb-refresher-scheduler"},
    {"path": "./global"},
    {"path": "./packages/basics"},
    {"path": "./packages/cli"},
    {"path": "./packages/clips"},
    {"path": "./packages/clips-react"},
    {"path": "./packages/css"},
    {"path": "./packages/graphql"},
    {"path": "./packages/react-signals"},
    {"path": "./packages/remote-react"},
    {"path": "./packages/remote-react-utilities"},
    {"path": "./packages/thread-signals"},
    {"path": "./packages/zest"}
  ]
}
