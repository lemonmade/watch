{
  "extends": "@quilted/typescript/workspace.json",
  "include": [
    "node_modules/@sewing-kit/*/*.d.ts",
    "config/**/*.ts",
    "scripts/**/*.ts",
    "graphql.config.ts",
    "**/sewing-kit.config.ts",
    "**/infrastructure/**/*.ts"
  ],
  "compilerOptions": {
    "outDir": "build/typescript/workspace",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "paths": {
      "global/*": ["./global/*"]
    }
  },
  "references": [
    {
      "path": "./global"
    },
    {
      "path": "./app"
    },
    {
      "path": "./functions/shared"
    },
    {
      "path": "./functions/api"
    },
    {
      "path": "./functions/migrate"
    },
    {
      "path": "./functions/email"
    },
    {
      "path": "./functions/cdn-request-forward-host"
    },
    {
      "path": "./functions/cdn-response-header-cleanup"
    },
    {
      "path": "./functions/tmdb-refresher"
    },
    {
      "path": "./functions/tmdb-refresher-scheduler"
    },
    {
      "path": "./functions/auth"
    },
    {
      "path": "./packages/basics"
    },
    {
      "path": "./packages/cli"
    },
    {
      "path": "./packages/clips"
    },
    {
      "path": "./packages/clips-react"
    },
    {
      "path": "./packages/css"
    },
    {
      "path": "./packages/graphql"
    },
    {
      "path": "./packages/zest"
    }
  ]
}
