{
  "name": "watch",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=14.18.0"
  },
  "packageManager": "pnpm@6.32.2",
  "devDependencies": {
    "@babel/runtime": "^7.18.9",
    "@changesets/changelog-github": "^0.4.3",
    "@changesets/cli": "^2.21.1",
    "@prisma/client": "^4.4.0",
    "@quilted/aws": "^0.3.40",
    "@quilted/browserslist-config": "^0.1.9",
    "@quilted/cloudflare": "^0.1.41",
    "@quilted/craft": "^0.1.160",
    "@quilted/eslint-config": "^0.1.15",
    "@quilted/prettier": "^0.2.11",
    "@quilted/quilt": "^0.5.117",
    "@quilted/typescript": "^0.2.18",
    "@types/node": "^16.11.0",
    "dotenv": "^16.0.0",
    "esbuild": "^0.15.0",
    "nodemon": "^2.0.0",
    "preact": "^10.11.3",
    "prisma": "^4.4.0",
    "react": "npm:@quilted/react@^17.0.0",
    "react-dom": "npm:@quilted/react-dom@^17.0.0",
    "source-map-support": "^0.5.21",
    "typescript": "^4.7.0",
    "wrangler": "^2.0.0"
  },
  "prettier": "@quilted/prettier",
  "eslintConfig": {
    "extends": "@quilted/eslint-config/workspace",
    "ignorePatterns": [
      "node_modules/",
      "build/",
      "cdk.out/",
      "app/graphql/types*",
      "app/server/graphql/schema.ts",
      "*.d.ts",
      "**/*.graphql.ts",
      "packages/cli/source/commands/develop/schema.ts",
      "packages/clips/source/graphql/**/*.ts"
    ],
    "rules": {
      "@typescript-eslint/ban-type": "off"
    }
  },
  "browserslist": [
    "extends @quilted/browserslist-config/defaults"
  ],
  "scripts": {
    "lint": "quilt lint",
    "test": "quilt test",
    "type-check": "quilt type-check",
    "develop": "quilt develop",
    "build": "quilt build",
    "packages:version": "changeset version && pnpm install --no-frozen-lockfile",
    "packages:deploy": "pnpm -r publish",
    "packages:deploy:preview": "changeset version --snapshot preview && changeset publish --tag preview --no-git-tag",
    "run:typescript": "node --no-warnings --experimental-specifier-resolution=node --experimental-vm-modules --loader \"./scripts/esbuild-module-loader.js\" --conditions quilt:source",
    "watch:typescript": "nodemon --ext json,js,ts,tsx --no-warnings --experimental-specifier-resolution=node --experimental-vm-modules --loader \"./scripts/esbuild-module-loader.js\" --conditions quilt:source",
    "deploy:wrangler": "wrangler"
  },
  "pnpm": {
    "overrides": {
      "preact-render-to-string": "5.2.3"
    }
  }
}
