{
  "name": "@watching/tools",
  "description": "Developer tooling helpers for building Clips extensions",
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "@watching/registry": "https://registry.npmjs.org"
  },
  "version": "0.2.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lemonmade/watch",
    "directory": "packages/tools"
  },
  "exports": {
    ".": {
      "types": "./build/typescript/index.d.ts",
      "quilt:source": "./source/index.ts",
      "quilt:esnext": "./build/esnext/index.esnext",
      "import": "./build/esm/index.mjs"
    },
    "./graphql": {
      "types": "./build/typescript/graphql.d.ts",
      "quilt:source": "./source/graphql.ts",
      "quilt:esnext": "./build/esnext/graphql.esnext",
      "import": "./build/esm/graphql.mjs"
    },
    "./loading": {
      "types": "./build/typescript/loading.d.ts",
      "quilt:source": "./source/loading.ts",
      "quilt:esnext": "./build/esnext/loading.esnext",
      "import": "./build/esm/loading.mjs"
    },
    "./rollup": {
      "types": "./build/typescript/rollup.d.ts",
      "quilt:source": "./source/rollup.ts",
      "quilt:esnext": "./build/esnext/rollup.esnext",
      "import": "./build/esm/rollup.mjs"
    }
  },
  "types": "./build/typescript/index.d.ts",
  "typesVersions": {
    "*": {
      "graphql": [
        "./build/typescript/graphql.d.ts"
      ],
      "loading": [
        "./build/typescript/loading.d.ts"
      ],
      "rollup": [
        "./build/typescript/rollup.d.ts"
      ]
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "rollup --config configuration/rollup.config.js"
  },
  "dependencies": {
    "@iarna/toml": "^3.0.0",
    "@quilted/events": "^2.0.0",
    "@quilted/graphql-tools": "^0.2.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-replace": "^5.0.5",
    "chokidar": "^3.5.0",
    "esbuild": "^0.19.0",
    "glob": "^10.0.0",
    "htm": "^3.1.1",
    "rollup": "^4.6.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "@watching/clips": "^0.5.3"
  },
  "peerDependenciesMeta": {
    "@watching/clips": {
      "optional": true
    }
  },
  "devDependencies": {
    "@watching/clips": "workspace:*"
  }
}
